<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/twitter_blue"
    android:gravity="center_vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/twitter_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:minWidth="32px"
        android:minHeight="32px"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo_twitter"
        tools:tint="@color/white" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:onClick="loginToRest"
        android:layout_below="@+id/twitter_logo"
        android:textColor="@color/white"
        android:background="@color/twitter_blue_fill_pressed"
        android:text="@string/login_label" />

</RelativeLayout>